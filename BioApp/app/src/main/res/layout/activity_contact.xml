<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.sahu97gmail.kedarnath.bioapp.ContactActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:id="@+id/ll">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Developer"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App Version :       1.0.1"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developer:"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textViewE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E1"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:id="@+id/linkedin"
                android:background="@drawable/ln_background"
                android:src="@drawable/ln_button"
                android:scaleType="fitCenter"
                android:onClick="mOpen" />
            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo Designer:"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textViewE2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E2"
                android:textStyle="normal"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
